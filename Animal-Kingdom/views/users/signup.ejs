<!--views/users/signup.js-->
<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% title=typeof title !=='undefined' ? title : "Animal Kingdom" %>
    <title>
      <%=title%>
    </title>
    <link rel='stylesheet' href='/styles/default.css'>
    <link rel="stylesheet" href="/styles/main.css">
    <script src="/scripts/functions.js" defer></script>
</head>

<body class="anonymous">
  <main class="signup">
    <section class="signup-content container">
      <h1>Sign up</h1>
      <p>Let's get started with a little bit about you</p>
      <form action="/user/signup" method="POST">

        <div class="input-group">
          <div>
            <label for="firstName">First name</label>
            <input type="text" name="firstName" placeholder="Jorge" required />
          </div>
          <div>
            <label for="lastName">Last name</label>
            <input type="text" name="lastName" placeholder="Cooper" required />
          </div>
        </div>

        <label for="email">Email</label>
        <input type="email" name="email" placeholder="name@email.com" required />

        <label for="username">Username</label>
        <input type="text" name="username" placeholder="jcooper" required />

        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" required />

        <label for="streetAddress">Street address</label>
        <input type="text" name="streetAddress" placeholder="123 Street" required />

        <label for="city">City</label>
        <input type="text" name="city" required placeholder="Las Vegas" />

        <div class="input-group">
          <div>
            <label for="state">State</label>
            <select name="state" required>
              <option value="" disabled>Select State</option>
              <option value="AL">AL</option>
              <option value="AK">AK</option>
              <option value="AZ">AZ</option>
              <option value="AR">AR</option>
              <option value="CA">CA</option>
              <option value="CO">CO</option>
              <option value="CT">CT</option>
              <option value="DE">DE</option>
              <option value="FL">FL</option>
              <option value="GA">GA</option>
              <option value="HI">HI</option>
              <option value="ID">ID</option>
              <option value="IL">IL</option>
              <option value="IN">IN</option>
              <option value="IA">IA</option>
              <option value="KS">KS</option>
              <option value="KY">KY</option>
              <option value="LA">LA</option>
              <option value="ME">ME</option>
              <option value="MD">MD</option>
              <option value="MA">MA</option>
              <option value="MI">MI</option>
              <option value="MN">MN</option>
              <option value="MS">MS</option>
              <option value="MO">MO</option>
              <option value="MT">MT</option>
              <option value="NE">NE</option>
              <option value="NV">NV</option>
              <option value="NH">NH</option>
              <option value="NJ">NJ</option>
              <option value="NM">NM</option>
              <option value="NY">NY</option>
              <option value="NC">NC</option>
              <option value="ND">ND</option>
              <option value="OH">OH</option>
              <option value="OK">OK</option>
              <option value="OR">OR</option>
              <option value="PA">PA</option>
              <option value="RI">RI</option>
              <option value="SC">SC</option>
              <option value="SD">SD</option>
              <option value="TN">TN</option>
              <option value="TX">TX</option>
              <option value="UT">UT</option>
              <option value="VT">VT</option>
              <option value="VA">VA</option>
              <option value="WA">WA</option>
              <option value="WV">WV</option>
              <option value="WI">WI</option>
              <option value="WY">WY</option>
            </select>
          </div>
          <div>
            <label for="zip">Zip Code</label>
            <input type="text" name="zip" placeholder="10020" minlength="5" maxlength="5" required pattern="\d{5,5}" />
          </div>
        </div>


        <label for="phone">Phone</label>
        <input type="tel" name="phone" placeholder="0001112222" required />

        <label for="userType">Are you a Pet Owner or a Veterinarian?</label>
        <select name="userType" id="userType" onchange="toggleSpecializationField()" required>
          <option value="" disabled>Select One</option>
          <option value="Owner">Owner</option>
          <option value="Veterinarian">Veterinarian</option>
        </select>

        <div class="specialization-field single-group">
          <label for="specialization">Specialization</label>
          <input type="text" name="specialization" placeholder="Specialization" required />
        </div>

        <button class='btn-xl' type="submit">Sign Up</button>
      </form>

      <p>Already have an account? <a href="/user/login">Log in</a></p>
    </section>

    <%- include('../partials/footer'); %>