<%- include('../partials/header') %>
<nav class="medical-records-nav">
    <a href="/user/<%=user._id%>">Dashboard</a> > <span>Appointments</span>
</nav>
<section class='book-appointment'>
<h2>Appointment Availability</h2>
    <table>
        <% if(user.userType === "Veterinarian"){ %>
            <thead>
                <tr>
                    <th></th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
        <tbody>
            <% availabilities.forEach(a => { %> 
                <form action="/user/<%= user._id %>/appointments/<%= a._id %>/?_method=DELETE" method="POST">
                    <tr>
                <td><button type="submit">X</button></td>
                <td><%= a.date.toLocaleDateString() %></td>
                <td><%= a.date.toLocaleTimeString([], { hour: "2-digit" , minute: "2-digit" }) %></td>
            </tr>
            </form>
            <% }) %>
        </tbody>
        <% } %>

        <% if(user.userType === "Owner"){ %>
            <% if(appointments.length){ %>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                <% appointments.forEach(a => { %> 
                <tr>
                    <td><%= a.date.toLocaleDateString() %></td>
                    <td><%= a.date.toLocaleTimeString([], { hour: "2-digit" , minute: "2-digit" }) %></td>
                    <td><a href="/user/<%=user._id %>/appointments/<%=a._id %>/book">Select</a></td>
                </tr>
                <% }) %>
                <% } else{ %>
                    <p class="no-appt">No Available Appointments</p>
                    <% } %>
            </tbody>
            <% } %>
    </table>

    <% if(user.userType === "Veterinarian") { %><br/><a href="/user/<%= user._id %>/appointments/new">Add Availability</a><% } %>
</section>


<%- include('../partials/footer') %>